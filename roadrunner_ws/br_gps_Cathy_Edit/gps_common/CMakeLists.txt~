cmake_minimum_required(VERSION 2.8.3)
project(gps_common)

############
## Catkin ##
############

find_package(catkin REQUIRED
  message_generation
  message_filters
  roscpp
  std_msgs
  nav_msgs
  sensor_msgs
  #sound_play
)

#######################################
## Declare ROS messages and services ##
#######################################

add_message_files(
  FILES
    GPSStatus.msg
    GPSFix.msg
)

generate_messages(DEPENDENCIES std_msgs)

###################################################
## Declare things to be passed to other projects ##
###################################################

catkin_package(
  INCLUDE_DIRS include
  CATKIN_DEPENDS message_runtime
)

###########
## Build ##
###########
include_directories(gps_common/include ${catkin_INCLUDE_DIRS})
add_executable(gps_common/utm_odometry_node src/utm_odometry_node.cpp)
set_target_properties(gps_common/utm_odometry_node PROPERTIES OUTPUT_NAME "utm_odometry_node")
target_link_libraries(gps_common/utm_odometry_node ${catkin_LIBRARIES})
add_dependencies(gps_common/utm_odometry_node sound_play_gencpp)

#############
## Install ##
#############

install(TARGETS gps_common/utm_odometry_node
  ARCHIVE DESTINATION ${CATKIN_PACKAGE_LIB_DESTINATION}
  LIBRARY DESTINATION ${CATKIN_PACKAGE_LIB_DESTINATION}
  RUNTIME DESTINATION ${CATKIN_PACKAGE_BIN_DESTINATION}
)

install(DIRECTORY include/gps_common/ 
  DESTINATION ${CATKIN_PACKAGE_INCLUDE_DESTINATION}
)

